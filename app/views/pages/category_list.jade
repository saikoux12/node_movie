extend ../layout

block content
  .container
    .row
    table.table.table-hover.table-bordered
      thead
        tr
          th 电影分类名
          th(colspan="2") 操作
      tbody
      each item in categories
        tr(class="item-id-#{item._id}")
          td #{item.name}
          td: a(href="../category/update/#{item._id}") 修改
          td 
            button.btn.btn-danger.del(type="button",data-id="#{item._id}") 删除
